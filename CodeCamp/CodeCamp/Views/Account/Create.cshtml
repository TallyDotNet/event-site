@model CodeCamp.ViewModels.Account.CreateAccountViewModel

@{
    ViewInfo.Title = "Create Account";
}

<div class="jumbotron">
    <h1>@ViewInfo.Title</h1>
    <p class="lead">
        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
        Please enter a user name and email for this site below and click the <strong>Confirm</strong> button to finish
        logging in.
    </p>
</div>

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Create", "Account", new {Model.ReturnUrl, Model.Persist})">
            <div class="panel panel-default">
                <div class="panel-heading">Associate Account</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="Username" class="col-lg-2 control-label">Username</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Username" name="Username" placeholder="Username" value="@Model.Username">
                            @Html.ValidationMessageFor(m => m.Username)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Email" class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Email" name="Email" placeholder="Email" value="@Model.Email">
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    
                    @Html.HiddenFor(m => m.ExternalLoginData)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-8 col-lg-4">
                    <button type="submit" class="btn btn-lg btn-success" style="width: 100%">Confirm</button>
                </div>
            </div>
        </form>
    </div>
</div>