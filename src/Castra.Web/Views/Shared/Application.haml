		-Html.RenderAction("Menu","Home")
		-Html.RenderAction("Status","Account")

		#content
			_
		-// hack - the next two lines are just for layout
		%div{style="clear:both;"}
		%br
		#submenu
		#footer 
			%p
				%span Revision Number:
				%span{id="revisionNumber"}1.0.10000.0
			%p 
				\&copy; 2010 All Rights Reserved
