				%a{href="http://www.famfamfam.com/"}FAMFAMFAM
				
		%script{type="text/javascript" src="/scripts/analytics.js"}
		!= needFacebookScript ? "<script src='http://connect.facebook.net/en_US/all.js#appId=200665599993844&amp;xfbml=1'></script>" : null