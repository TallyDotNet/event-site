^ var title = "Tallahassee Code Camp"
^ var needFacebookScript = false

!!!
%html{xmlns="http://www.w3.org/1999/xhtml"}
	%head
		%title= title
		%link{href="/Content/Site.css" rel="stylesheet" type="text/css"}
		%link{href="/Content/overcast/jquery-ui-1.8.4.custom.css" rel="stylesheet" type="text/css"}
		%script{type="text/javascript" src="/scripts/jquery-1.4.1.min.js"}

	%body

		#logo
			.title 
				=Html.ActionLink("Tallahassee Code Camp","Index","Home")
